<h2><span class="bg-light">ジャンル一覧・追加</span></h2>
  <div class>
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <%=f.label :"ジャンル名" %>
      <%=f.text_field :name, placeholder: "ジャンル名" %>
      <%=f.submit "新規登録",class: 'btn btn-success' %>
    <% end %>
  </div>
  
  <div class>
     <table class=table>
       <thead>
         <tr>
           <th><th>
           <th>ジャンル</th>
         </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%=genre.name %></td>
              <td><%=link_to "編集する",edit_admin_genre_path(genre.id),class: 'btn btn-sm btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
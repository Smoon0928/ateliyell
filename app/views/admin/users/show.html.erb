<h4>ユーザー詳細</h4>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-12 col-lg-12 mb-3 mt-3">
        <div class="card">
          <%= image_tag @user.get_profile_image(150, 150) %>
          <div class="card-body">
            <h5 class="card-title">
              <%= @user.user_name %>
            </h5>
            <div class="card-text">
              <% if @user.self_introduction.present? %>
                <div class="mb-3">
                  <h6 class="m-0">Introduction</h6>
                  <%= @user.self_introduction %>
                </div>
              <% end %>
              <div class="mb-3">
                <h6 class="m-0">Post count</h6>
                <%= @user.products.count %>
              </div>
              <div class="row">
                <div class="col-12 col-md-6">
                  <small class="text-black-50">
                    Follow: <%= link_to @user.followings.count, followings_friend_path(@user.id) %>
            	    </small>
                </div>
                <div class="col-12 col-md-6">
                  <small class="text-black-50">
                    Follower: <%= link_to @user.followers.count, followers_friend_path(@user.id) %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <!--<#% end %>-->
</div>







 <div class="container mt-5">
    <div class="row row-cols-1 row-cols-3">

      <% @products.each do |product| %>
        <div class="col">
          <div class="card">
            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
              <% if product.images.first.present? %>
                <%= image_tag product.images.first, size: "200x200", class: "img-fluid" %>
              <% end %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to product.name, product_path(product.id) %></h5>
              <p class="card-text"><%= product.introduction %></p>
              <%= link_to "作品を見る",product_path(product.id), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
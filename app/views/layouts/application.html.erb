<!DOCTYPE html>
<html>
  <head>
    <title>Ateliyell</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
           <a class="navbar-brand p-3" href="/"><%= image_tag'logo_test.png',size: '100x100' %></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
      <%if user_signed_in? && current_user.user_name == "guestuser" %>
        <li class="nav-item">
          <%=link_to "ログアウト",destroy_user_session_path,method: :delete, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to '作品一覧', products_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_path, class: 'nav-link text-dark' %>
        </li>
         <li>
          <li class="nav-item">
          <%=link_to "新規登録",new_user_registration_path, class: 'nav-link text-dark' %>
        </li>
      <%elsif user_signed_in? %>
        <li class="nav-item">
          <%=link_to "ログアウト",destroy_user_session_path,method: :delete, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to '作品投稿', new_product_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to '作品一覧', products_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-dark' %>
        </li>
      <% else %>
        <li>
          <li class="nav-item">
          <%=link_to "新規登録",new_user_registration_path, class: 'nav-link text-dark' %>
        </li>
        <li>
          <%= link_to "ログイン",user_session_path, class: 'nav-link text-dark' %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_path, class: 'nav-link text-dark' %>
        </li>
      <% end %>
      
      <% if admin_signed_in? %>
        </li>
        <li class= "nav-item">
          <%= link_to "ジャンル一覧",admin_genres_path,class: 'nav-link text-dark' %>
        </li>
        <li class= "nav-item">
          <%= link_to "会員一覧",admin_users_path,class: 'nav-link text-dark' %>
        </li>
        <li class= "nav-item">
          <%= link_to "作品一覧",admin_products_path,class: 'nav-link text-dark' %>
        </li>
         <li class="nav-item">
          <%=link_to "ログアウト",destroy_user_session_path,method: :delete, class: 'nav-link text-dark' %>
         </li>
      <% end %>
      
      <div id="search-wrap">
        <%= search_form_for @search, url: users_path, class: 'search_container' do |f| %>
          <%= f.search_field :user_name_cont, placeholder: '検索するユーザーネームを入力...' %>
          <%= f.button type: 'submit', class: 'search-btn' do %>
          <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
      
      
      
      
    </header>
    <%= yield %>
  </body>
</html>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th class="text-center">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to "全て", products_path %></td>
    </tr>
    <% genres.each do |genre| %>
      <tr>
          <td class="align-middle">
            <% if params[:sort_type].present? %>
              <%= link_to genre.name, products_path(genre_id: genre.id, sort_type: params[:sort_type]) %>
            <% else %>
              <%= link_to genre.name, products_path(genre_id: genre.id) %>
            <% end %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
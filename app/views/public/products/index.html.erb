
  <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3 mt-4'>
       <%= render 'genre', genres: @genres %>
    </div>

   <div class='col-md-9 row pl-5 mt-4'>
   <div class="row row-cols-1 row-cols-3">


      <% @products.each do |product| %>
        <!-- First column -->
        <div class="col mt-4">
          <div class="card">
            <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
              <% if product.images.first.present? %>
                <%= image_tag product.images.first, size: "200x200", class: "img-fluid" %>
              <% end %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%=link_to product.name, product_path(product.id) %></h5>
              <p class="card-text"><%=product.introduction %></p>
              <%= link_to "作品の詳細を見る",product_path(product.id), class: "btn btn-success" %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
  </div>
  </div>


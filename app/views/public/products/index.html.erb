<h1>投稿一覧</h1>
<% @products.each do |product| %>

  <p>タイトル</p>
  <span>
    <%=link_to product.name, product_path(product.id) %>
  </span>
  
  <p>投稿画像</p>
  <% if product.images.attached? %>
    <%= image_tag product.images.first, size: "200x200" %>
  <% else %>
    <%= image_tag "no_image",size: "200x200" %>
  <% end %>
  

<% end %>
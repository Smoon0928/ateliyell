<div id="follow_form">
    <% if current_user.following?(product.user) %>
      <%= link_to "フォロー中", unfollow_path(product.user.id), class: 'btn btn-outline-primary', method: :delete, remote: true %>
    <% else %>
      <%= link_to "フォローする", follow_path(product.user.id), class: 'btn btn-outline-primary', method: :post, remote: true %>
    <% end %>
</div>


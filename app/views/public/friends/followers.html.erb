

<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-11 col-lg-8  mx-auto">
   <br>
     <h4><span class="bg-light">フォロワー<span></h4>
      <table class='table'>
       <thead class="table table-light">
        <tr>
          <th>ユーザーネーム</th>
          <th>フォロワー数</th>
          <th>ステータス</th>
        </tr>
       </thead>
         <tbody>
           <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.user_name,admin_user_path(user.id) %></td>
              <td><%= user.followers.count %></td>
              <td><% if user.is_deleted %>
                    <div class="text-danger">退会済</div>
                  <% else %>
                    <div class="text-success">有効会員</div>
                  <% end %>
              </td>
            </tr>
           <% end %>
　       </tbody>
      </table>
    <div class="col-md-5 mx-auto"></div>
  </div>
</div>
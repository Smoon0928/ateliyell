<div class="container">
  <div class="row">
    <% @search_users.each do |user| %>
      <div class="col-12 col-md-6 col-lg-4 mb-3">
        <div class="card">
          <%= image_tag user.get_profile_image(300, 300), class: 'search-index-card-img' %>
          <div class="card-body">
            <h5 class="card-title">
              <%= user.user_name %>
            </h5>
            <div class="card-text">
              <% if user.self_introduction.present? %>
                <div class="mb-3">
                  <h6 class="m-0">Introduction</h6>
                  <%= user.self_introduction %>
                </div>
              <% end %>
              <div class="mb-3">
                <h6 class="m-0">Post count</h6>
                <%= user.products.count %>
              </div>
              <div class="row">
                <div class="col-12 col-md-6">
                  <small class="text-black-50">
                    Follow: <%= link_to user.followings.count, followings_friend_path(user.id) %>
            	    </small>
                </div>
                <div class="col-12 col-md-6">
                  <small class="text-black-50">
                    Follower: <%= link_to user.followers.count, followers_friend_path(user.id) %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
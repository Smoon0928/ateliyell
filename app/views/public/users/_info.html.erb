<table class='table' id='user_info'>
  <tr><%= image_tag user.get_profile_image(100,100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= link_to user.user_name,user_path(user.id) %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.self_introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= link_to followings_friend_path(user.id) do %>
	        <%= user.followings.count %>
	      <% end %>
	   </th>
  </tr> 
  <tr>
	  <th>followers</th>
	  <th><%= link_to followers_friend_path(user.id) do %>
	        <%= user.followers.count %>
	      <% end %>
	  </th>
  </tr>
</table>

<div class='row'>
	<% if signed_in? && user != current_user%></td>
	  <td><%#= render "relationships/btn",user: user %></td>
	<% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
   <% end %>
  <% end %>
</div>
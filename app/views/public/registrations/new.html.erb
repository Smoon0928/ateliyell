<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-8 offset-md-1 mt-5">
    <h2><span class="bg-light">新規会員登録<span></h2>
  </div>
  <div class="col-md-8 offset-md-1 mt-5">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
 <table class="table table-borderless">
   <tr>
     <td>名前<td>
     <td>
       <%=f.label :"(姓)" %>
     　<%=f.text_field :last_name, autofocus: true, placeholder: "山田" %>
     </td>
     <td>
       <%=f.label :"(名)" %>
       <%=f.text_field :first_name, autofocus: true, placeholder: "花子" %>
     </td>
   </tr>
   <tr>
     <td>フリガナ</td>
     <td>
       <%=f.label :"(セイ)" %>
       <%=f.text_field :last_name_kana, autofocus: true, placeholder: "ヤマダ" %>
     </td>
     <td>
       <%=f.label :"(メイ)" %>
       <%=f.text_field :first_name_kana, autofocus: true, placeholder: "ハナコ"  %>
     </td>
   </tr>
   <tr>
     <td>
       <%= f.label :"メールドレス" %>
     </td>
     <td>
        <%= f.email_field :email, autofocus: true, autocomplete: true, placeholder: "sample@example.com" %>
     </td>
   </tr>
   <tr>
     <td>
       <%= f.label :"電話番号(ハイフンなし)" %>
     </td>
     <td>
       <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000" %>
     </td>
   </tr>
   <tr>
     <td><%= f.label :"パスワード（6文字以上）" %></td>
     <td><%= f.password_field :password %>
     </td>
   </tr>
   <tr>
     <td><%= f.label :"パスワード（確認用）" %></td>
     <td>
      <%= f.password_field :password_confirmation %>
     </td>
   </tr>
   <tr>
     <td></td>
     <td></td>
     <td>
       <div class="actions">
         <%= f.submit "新規登録", class: 'btn btn-success btn-sm' %>
       </div>
     </td>
   </tr>
 </table>
   <% end %>
  </div>
  <div class="col-md-8 offset-md-1 mt-5">
   <h4><span class="bg-light">既に登録済みの方<span></h4>
   <p class="mt-3">
    <span>
     <%= link_to "こちら", new_session_path(resource_name) %>
    </span>
     からログインしてください
   </p>
  </div>
 </div>
</div>